# vi:syntax=sh

# aliases I might use with sudo

# needed for pushing systemfiles
add_ssh_keys() {
        eval "$(keychain --eval --quiet $@)"
}

alias vim='svim'

# sudo to other users
alias sup='sudo -i -u patricol'
alias sip='sup'
alias suw='sudo -i -u work'
alias siw='suw'

# restart powerline if needed
alias rpl='LANG="en_US.UTF-8" powerline-daemon -qr'

[Trigger]
Operation=Install
Operation=Upgrade
Operation=Remove
Type=Package
Target=nvidia

[Action]
Description=Updating nvidia modules in initcpio...
Depends=mkinitcpio
When=PostTransaction
# Exec=/usr/bin/mkinitcpio -p linux
Exec=/bin/sh -c 'echo "#blacklist nouveau" | tee /usr/lib/modprobe.d/nvidia.conf; mkinitcpio -p linux'

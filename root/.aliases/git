#git systemfiles

alias gsf='git --git-dir=/root/.systemfiles-repo/ --work-tree=/'

alias gsfk='add_ssh_keys github'

alias gsfs='gsf status'

alias gsfd='gsf diff'
alias gsfdc='gsfd --cached'

alias gsfa='gsf add'
alias gsfaa='gsfa -u && gsfa ~/.aliases /boot/loader /boot/EFI/refind/{drivers*,theme} /usr/local/{bin,sbin} /etc/pacman.d/hooks /root/efivars'
alias gsfac='gsfaa && gsfc'
alias gsfc='gsf commit -v'

alias gsfp='gsf push'

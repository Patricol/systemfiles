#!/bin/bash

customlock() {
    if [[ -f ~/.config/wpg/patricol_scripts/named-colors.sh ]]; then
        source ~/.config/wpg/patricol_scripts/named-colors.sh
    else
        local darkest="212121"
        local red="d50000"
        local green="00c853"
        local blue="2962ff"
        local bright="bdbdbd"
    fi

    local bg="$darkest"
    local typing="$green"
    local verifying="$blue"
    local wrong="$red"
    local text="$bright"

    #transparency ending
    local tpe="FF"

    i3lock -k --timestr="%H:%M" --noinputtext="" --wrongtext="" --veriftext="" -e --datestr="%D" \
    -c "$bg" \
    --ringcolor="$typing$tpe" \
    --insidevercolor="$verifying$tpe" \
    --ringvercolor="$verifying$tpe" \
    --insidewrongcolor="$wrong$tpe" \
    --ringwrongcolor="$wrong$tpe" \
    --insidecolor="$bg$tpe" \
    --linecolor="$bg$tpe" \
    --separatorcolor="$bg$tpe" \
    --keyhlcolor="$typing$tpe" \
    --bshlcolor="$wrong$tpe" \
    --verifcolor="$text$tpe" \
    --wrongcolor="$text$tpe" \
    --layoutcolor="$text$tpe" \
    --timecolor="$text$tpe" \
    --datecolor="$text$tpe"

    #--line-uses-ring \
    #--line-uses-inside \
}

customlock
unset -f customlock


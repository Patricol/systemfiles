#!/usr/bin/env bash

main() {
    if [[ -f ~/.config/wpg/custom/named-colors.sh ]]; then
        source ~/.config/wpg/custom/named-colors.sh
    else
        local darkest
        darkest="212121"
        local red
        red="d50000"
        local green
        green="00c853"
        local blue
        blue="2962ff"
        local bright
        bright="bdbdbd"
    fi

    local bg
    bg="${darkest}"
    local typing
    typing="${green}"
    local verifying
    verifying="${blue}"
    local wrong
    wrong="${red}"
    local text
    text="${bright}"

    #transparency ending
    local tpe
    tpe="FF"

    i3lock -k --timestr="%H:%M" --noinputtext="" --wrongtext="" --veriftext="" -e --datestr="%D" \
    -c "${bg}" \
    --ringcolor="${typing}${tpe}" \
    --insidevercolor="${verifying}${tpe}" \
    --ringvercolor="${verifying}${tpe}" \
    --insidewrongcolor="${wrong}${tpe}" \
    --ringwrongcolor="${wrong}${tpe}" \
    --insidecolor="${bg}${tpe}" \
    --linecolor="${bg}${tpe}" \
    --separatorcolor="${bg}${tpe}" \
    --keyhlcolor="${typing}${tpe}" \
    --bshlcolor="${wrong}${tpe}" \
    --verifcolor="${text}${tpe}" \
    --wrongcolor="${text}${tpe}" \
    --layoutcolor="${text}${tpe}" \
    --timecolor="${text}${tpe}" \
    --datecolor="${text}${tpe}"

    #--line-uses-ring \
    #--line-uses-inside \
}

main

set $alt Mod1
set $win Mod4
set $shift Shift
set $ctrl Control

set $screens_on output * power on

# TODO add an option to 'systemctl restart greetd' but the greeter user needs permissions to do so.
set $power_menu exec swaynag \
	-t warning \
	-m 'What do you want to do?' \
	-b 'Poweroff' 'systemctl poweroff' \
	-b 'Reboot' 'systemctl reboot'

bindsym $ctrl+$alt+Delete $screens_on; $power_menu
bindsym $win+$shift+e $power_menu
bindsym $alt+$shift+e $power_menu

include /etc/sway/config.d/*

#!/usr/bin/env sh

# xrandr commands saved from arandr

case "$(cat /etc/hostname)" in
	fcdcbda)
		# xrandr --output DVI-I-1 --off --output DP-1 --mode 1920x1080 --pos 0x1080 --rotate normal --output DP-2 --mode 1920x1080 --pos 1280x0 --rotate inverted --output DP-3 --mode 1920x1080 --pos 3200x0 --rotate inverted --output HDMI-1 --primary --mode 1920x1080 --pos 1920x1080 --rotate normal
		# xrandr --output DVI-I-1 --off --output DP-1 --mode 1920x1080 --pos 0x1080 --rotate normal --output DP-2 --mode 1920x1080 --pos 1280x0 --rotate inverted --output DP-3 --mode 1920x1080 --pos 3200x0 --rotate inverted --output HDMI-1 --primary --mode 2560x1440 --pos 1920x1080 --rotate normal
		# xrandr --output DVI-I-1 --off --output DP-1 --mode 1920x1080 --pos 0x578 --rotate left --output DP-2 --mode 5120x1440 --pos 1080x1080 --output DP-3 --mode 1920x1080 --pos 3000x0 --rotate inverted --output HDMI-1 --mode 1920x1080 --pos 1080x0 --rotate inverted
		xrandr --output DVI-I-1 --off --output DP-1 --mode 1920x1080 --pos 0x578 --rotate left --output DP-2 --off --output DP-3 --mode 1920x1080 --pos 3000x0 --rotate inverted --output HDMI-1 --mode 1920x1080 --pos 1080x0 --rotate inverted
		# xrandr --output DVI-I-1 --off --output DP-1 --mode 1920x1080 --pos 0x840 --rotate normal --output DP-2 --mode 1920x1080 --pos 5560x0 --rotate right --output DP-3 --mode 1920x1080 --pos 4480x0 --rotate left --output HDMI-1 --primary --mode 2560x1440 --pos 1920x480 --rotate normal
		;;
	mojave-express)
		xrandr --output DisplayPort-0 --mode 2560x1080 --pos 2560x0 --rotate normal --output HDMI-0 --primary --mode 2560x1080 --pos 0x0 --rotate normal --output DVI-0 --off --output DVI-1 --off
		;;
	*)
		echo "setup-xrandr didn't recognize the hostname."
		;;
esac

true # NOTE: if script fails; lightdm will fail to start.
